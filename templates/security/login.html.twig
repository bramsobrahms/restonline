{% extends 'base.html.twig' %}

{% block body %}
	{% if %}
		<div class="alert alert-danger">
			{{ error.messageKey }}
		</div>
	{% endif %}
	<div class="container">
		<div class="row">
			<div class="col text-center">
				<div class="col-xs-12">
					<h1>Espace de connexion</h1>
				</div>
		
				<form>
					<div class="form-group">
						<label for="email">Email</label>
						<input type="text" name="_email" value="{{ last_email}}}" placeholder="email">
					</div>
					<div class="form-group">
						<label for="email">Password</label>
						<input type="password" name="_password" placeholder="Password">
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('autenticate') }}"/>
					<button role="button" type="submit" class="'btn btn-primary-lg'"><i class="fa fa-sign-in" aria-hidden="true">Connextion</i></button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}